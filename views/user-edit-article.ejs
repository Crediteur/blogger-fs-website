<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogger</title>

    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous" />
    <!-- icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- css -->
    <link type="text/css" rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <!-- navbar -->
    <nav>
      <a href="/user">
        <span class="material-symbols-outlined"> home </span>
        <p>Home</p>
      </a>
      <a href="/user/settings">
        <span class="material-symbols-outlined"> settings </span>
        <p>Settings</p>
      </a>
      <a href="/main">
        <span class="material-symbols-outlined"> logout </span>
        <p>Log Out</p>
      </a>
    </nav>
    <div class="line-thin-2"></div>

    <!-- article headings -->
    <div class="inline-padding">
      <h2>Editing Article ID: <%= draft.article_id %></h2>
      <p class="text-style-2">Created: <%= draft.creation_date %></p>
      <p class="text-style-2">Edited: <%= draft.edit_date %></p>
    </div>

    <!-- edit main article title and body-->
    <form
      class="inline-padding"
      action="/user/edit-draft/<%= draft.article_id %>"
      method="post">
      <div>
        <div><label class="form-label" for="article-title">Title</label></div>
        <input
          type="text"
          class="input-box form-control"
          name="article_title"
          value="<%=draft.article_title.trim() %>" />
        <div>
          <label class="form-label" for="article-subtitle">Subtitle</label>
        </div>
        <input
          type="text"
          class="input-box form-control"
          name="article_subtitle"
          value="<%=draft.article_subtitle.trim() %>" />
        <div><label class="form-label" for="article-text">Body</label></div>
        <textarea
          class="edit-article form-control"
          type="text"
          name="article_text"><%= draft.article_text.trim() %></textarea>
      </div>
      <div class="form-buttons">
        <input
          class="btn btn-secondary"
          type="button"
          value="Cancel"
          onclick="location.href='/user';" />
        <input class="btn btn-primary" type="submit" value="Save" />
      </div>
    </form>
    <div class="line-thin"></div>
  </body>
</html>
